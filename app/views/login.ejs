<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Paramex</title>

        <!-- "Styles" 
        ----------------------------------------------------------------------->
        
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

        <!-- "Scripts" 
        ----------------------------------------------------------------------->
    </head>

    <body>
        <style>
            body {
                width: 100vw;
                min-height: 100vh;
            }

            body > main {
                width: inherit;
                min-height: inherit;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            body > main > form {
                flex-basis: 40ch;
            }
        </style>

        <main class="bg-light">
            <form class="shadow rounded bg-white p-4" action="/auth/connexion" method="POST" <%= isLoggedIn ? 'onsubmit="return false;"' : ''; %>>
                <h4 class="mb-3">Paramex</h4>

                <% if(alert) { %>
                    <div class="alert alert-<%= alert.type %> alert-dismissible fade show">
                        <%= alert.message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="mb-3">
                    <label class="form-label" for="fullname">Full name</label>
                    <input class="form-control" name="fullname" id="fullname" type="text" value="<%= fullname ?? '' %>" placeholder="" <%= isLoggedIn ? 'disabled' : '' ; %>>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" name="password" id="password" type="password" value="<%= password ?? '' %>" placeholder="" <%= isLoggedIn ? 'disabled' : '' ; %>>
                </div>

                <div class="d-flex gap-2 justify-content-between align-items-baseline">
                    <button class="btn btn-primary" <%= isLoggedIn ? "disabled" : "" %>>Login</button>
                    <a class="btn btn-link" href="/auth/recuperation">Forgot password?</a>
                </div>
            </form>
        </main>

        <!-- "Scripts" 
        ----------------------------------------------------------------------->

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" 
                integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" 
                crossorigin="anonymous"></script>

        <script>
            // Activate all tooltips in a page.
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
        </script>

        <script>
            const TEXT_WRITABLE_INPUTS_SELECTOR = `
                input[type='text'],
                input[type='password'],
                input[type='email'],
                input[type='search'],
                input[type='tel'],
                input[type='url'],
                input[type='number'],
                input[type='date'],
                input[type='datetime-local'],
                input[type='month'],
                input[type='time'],
                input[type='week'],
                textarea
            `;
            let textBasedInputs = document.querySelectorAll(TEXT_WRITABLE_INPUTS_SELECTOR);
            for(let i = 0; i < textBasedInputs.length; i++) {
                let textBasedInput = textBasedInputs[i];
                textBasedInput.setAttribute('autocomplete'  , 'off');
                textBasedInput.setAttribute('autocorrect'   , 'off');
                textBasedInput.setAttribute('autocapitalize', 'off');
            }
        </script>
    </body>
</html>