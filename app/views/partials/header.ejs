<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Paramex</title>
        
        <!-- "Styles" 
        ----------------------------------------------------------------------->

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

        <% if(typeof styles === 'array') { %>
            <% for(let i = 0; i < styles.length; i++) { %>
                <script src="<%= styles[i] %>"></script>
            <% } %>        
        <% } %>

        <!-- "Scripts" 
        ----------------------------------------------------------------------->

        <% if(typeof scripts === 'array') { %>
            <% for(let i = 0; i < scripts.length; i++) { %>
                <script src="<%= scripts[i] %>"></script>
            <% } %>
        <% } %>
    </head>

    <body>
        <!-- 
            Body's List of Content: 
            **************************************

            NOTE: When search for any of the following sections, enclose the name in double quotes (") 
            to distinguish it from regular occurrences.

            - Style
            - Aside
            - Header
              - Breadcrumb
              - Avatar
            - Main
            - Footer
            - Scripts
        -->

        <style>
            body {
                width: 100vw;
                min-height: 100vh;
                display: grid;
                grid-template-columns: 24ch 1fr;
                grid-template-rows: auto 1fr auto;
            }

            body > header {
                grid-column: 2/3;
                grid-row: 1/2;
            }

            body > main {
                grid-column: 2/3;
                grid-row: 2/3;
            }

            body > footer {
                grid-column: 2/3;
                grid-row: 3/4;
            }

            body > aside {
                grid-column: 1/2;
                grid-row: 1/-1;
            }
        </style>

        <!-- "Aside"
        ----------------------------------------------------------------------->
        
        <aside class="p-3 border-end">
            <h4 class="ms-3">Paramex</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active rounded bg-primary-subtle" href="/dashboard">Dashboard</a>
                    <a class="nav-link" href="/parametres/societe">Parametres</a>
                </li>
            </ul>
        </aside>

        <!-- "Header" 
        ----------------------------------------------------------------------->
        
        <header class="p-3 bg-light">
            <div class="d-flex justify-content-between align-items-baseline">

                <!-- "Breadcrumb" 
                ----------------------------------------------------------------------->

                <nav>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Library</li>
                    </ol>
                </nav>

                <!-- "Avatar" 
                ----------------------------------------------------------------------->
                
                <div class="dropdown">
                    <button class="btn btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-fill"></i> 
                        <span><%= user.fullname %></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/account">Account info</a></li>
                        <li><a class="dropdown-item" href="/auth/deconnexion">Logout</a></li>
                    </ul>
                </div>
            </div>

            <!-- "Tabs" 
            ----------------------------------------------------------------------->
            <% if(typeof tabs === 'array') { %>
                <ul class="nav nav-tabs">
                    <% for(let i = 0; i < tabs.length; i++) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/<%= tabs[i].url %>">
                                <%= tabs[i].title %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            <% } %>
        </header>

        <!-- "Main"
        ----------------------------------------------------------------------->