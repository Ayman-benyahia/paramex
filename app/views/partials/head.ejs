<%  
    var scripts = scripts ?? [];
    var styles  = styles  ?? []; 
%>
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Paramex</title>
        
        <!-- "Styles" 
        ----------------------------------------------------------------------->

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

        <% for(let i = 0; i < styles.length; i++) { %>
            <script src="<%= styles[i] %>"></script>
        <% } %>        

        <style>
            body {
                width: 100vw;
                min-height: 100vh;
                display: grid;
                grid-template-columns: 24ch 1fr;
                grid-template-rows: auto 1fr auto;
            }

            body > header {
                grid-column: 2/3;
                grid-row: 1/2;
            }

            body > main {
                grid-column: 2/3;
                grid-row: 2/3;
            }

            body > footer {
                grid-column: 2/3;
                grid-row: 3/4;
            }

            body > aside {
                grid-column: 1/2;
                grid-row: 1/-1;
            }
        </style>

        <!-- "Scripts" 
        ----------------------------------------------------------------------->
        
        <% for(let i = 0; i < scripts.length; i++) { %>
            <script src="<%= scripts[i] %>"></script>
        <% } %>
                
    </head>

