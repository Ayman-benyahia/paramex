<%- include('./partials/head.ejs'); -%>

    <!-- "Aside" 
    ----------------------------------------------------------------------->

    <%- include('./partials/aside.ejs') -%>

    <!-- "Header" 
    ----------------------------------------------------------------------->

    <%- include('./partials/header.ejs'); -%>

    <!-- "Main" 
    ----------------------------------------------------------------------->

    <main class="p-3">
        
        <!-- "Form" 
        ----------------------------------------------------------------------->
        
        <form class="p-4 shadow rounded" action="/account" method="POST" style="max-width: 40ch;">

            <!-- "Alert" 
            ----------------------------------------------------------------------->
            
            <% if(alert) { %>
                <div class="alert alert-<%= alert.type %> alert-dismissible fade show">
                    <%= alert.message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <input name="id" type="hidden" value="<%= user.id %>">

            <div class="mb-3">
                <label class="form-label" for="fullname">Full name</label>
                <input class="form-control" name="fullname" id="fullname" value="<%= employee?.fullname ?? '' %>" type="text">
            </div>

            <div class="mb-4">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" name="password" id="password" value="<%= employee?.password ?? '' %>" type="text">
            </div>

            <div class="d-flex gap-2 justify-content-start align-items-baseline">
                <button class="btn btn-primary">Apply</button>
                <a class="btn btn-light border" href="/dashboard">Back</a>
            </div>
        </form>
    </main>
<%- include('./partials/footer.ejs'); -%>