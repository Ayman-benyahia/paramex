<%- include('../partials/header.ejs', { tabs: ['company', 'cities', 'employees'] }); -%>
    <main class="p-3">
        <form class="shadow rounded p-4" action="/parametres/societe" method="POST">
            <h4 class="mb-3">Company's Details</h4>

            <% if(alert) { %>
                <div class="alert alert-<%= alert.type %> alert-dismissible fade show">
                    <%= alert.message %>
                    <button class="btn-close" type="button" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <input name="id" type="hidden" value="<%= company.id ?? '' %>">
            
            <div class="mb-3">
                <label class="form-label" for="name">Nom</label>
                <input class="form-control" name="name" id="name" type="text" value="<%= company.name ?? '' %>" placeholder="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="company_registration_number">ICE</label>
                <input class="form-control" name="company_registration_number" id="company_registration_number" type="text" value="<%= company.company_registration_number ?? '' %>" placeholder="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="tax_identifier">IF</label>
                <input class="form-control" name="tax_identifier" id="tax_identifier" type="text" value="<%= company.tax_identifier ?? '' %>" placeholder="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="trade_register_number">RC</label>
                <input class="form-control" name="trade_register_number" id="trade_register_number" type="text" value="<%= company.trade_register_number ?? '' %>" placeholder="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="bussiness_license_number">Patente</label>
                <input class="form-control" name="bussiness_license_number" id="bussiness_license_number" type="text" value="<%= company.bussiness_license_number ?? '' %>" placeholder="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="phone_1">Tel 1</label>
                <input class="form-control" name="phone_1" id="phone_1" type="text" value="<%= company.phone_1 ?? '' %>" placeholder="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="phone_2">Tel 2</label>
                <input class="form-control" name="phone_2" id="phone_2" type="text" value="<%= company.phone_2 ?? '' %>" placeholder="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="website">Site Web</label>
                <input class="form-control" name="website" id="website" type="text" value="<%= company.website ?? '' %>" placeholder="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="address">Adresse</label>
                <textarea class="form-control" name="address" id="address" value="<%= company.address ?? '' %>" placeholder="" rows="1"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="risk_rate">Taux d'risk</label>
                <input class="form-control" name="risk_rate" id="risk_rate" type="text" value="<%= company.risk_rate ?? '' %>" placeholder="">
            </div>

            <div class="d-flex gap-2 justify-content-start align-items-baseline">
                <button class="btn btn-primary">Update</button>
                <a class="btn btn-light border" href="/dashboard">Back</a>
            </div>
        </form>
    </main>
<%- include('../partials/footer.ejs'); -%>